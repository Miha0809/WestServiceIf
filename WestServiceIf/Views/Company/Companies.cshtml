@model List<Company>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer ViewLocalizer

@{
    ViewBag.Title = ViewLocalizer["Title"];
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card w-100 mb-3">
              <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Description</p>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-primary" asp-controller="Company" asp-action="Edit" asp-route-id="@item.Id">@ViewLocalizer["Edit"]</a>
                    <a class="btn btn-primary" asp-controller="Company" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Видалити?')">@ViewLocalizer["Delete"]</a>
                }
              </div>
            </div>
        }
    </div>
</div>