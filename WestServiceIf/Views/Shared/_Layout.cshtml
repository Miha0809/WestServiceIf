@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject IViewLocalizer ViewLocalizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ЗАХІД-СЕРВІС-ІФ</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WestServiceIf.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Products">ЗАХІД-СЕРВІС-ІФ</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>Déconnexion
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Product" asp-action="Products">@ViewLocalizer["Parts"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Company" asp-action="Companies">@ViewLocalizer["Partners"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="AboutUs">@ViewLocalizer["AboutCompany"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="AboutProduction">@ViewLocalizer["AboutProduction"]</a>
                    </li>
                </ul>
            </div>
             <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                 <ul class="navbar-nav flex-grow-end">
                     @if (User.Identity!.IsAuthenticated)
                     {
                         <li class="nav-item">
                             <a class="nav-link text-dark" asp-controller="Product" asp-action="Add">@ViewLocalizer["AddPart"]</a>
                         </li>
                         <li class="nav-item">
                             <a class="nav-link text-dark" asp-controller="Company" asp-action="Add">@ViewLocalizer["AddCompany"]</a>
                         </li>
                     }
                     <div class="navbar-collapse collapse d-sm-inline-flex justify-content-start">
                         <ul class="navbar-nav flex-grow-start">
                             <li class="nav-item dropdown">
                                 <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                     @ViewLocalizer["Language"]
                                 </a>
                                 <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                     <li><a class="dropdown-item text-dark" href="@Url.Action("SetCulture", "Home", new { culture = "uk", returnUrl = Context.Request.Path })">Українська</a></li>
                                     <li><a class="dropdown-item text-dark" href="@Url.Action("SetCulture", "Home", new { culture = "en", returnUrl = Context.Request.Path })">English</a></li>
                                     <li><a class="dropdown-item text-dark" href="@Url.Action("SetCulture", "Home", new { culture = "de", returnUrl = Context.Request.Path })">Deutsch</a></li>
                                     <li><a class="dropdown-item text-dark" href="@Url.Action("SetCulture", "Home", new { culture = "fr", returnUrl = Context.Request.Path })">Français</a></li>
                                 </ul>
                             </li>
                         </ul>
                     </div>

                     @if (!User.Identity!.IsAuthenticated)
                     {
                         <li class="nav-item">
                             <a class="nav-link text-dark" asp-controller="Authorization" asp-action="Login">@ViewLocalizer["Login"]</a>
                         </li>
                     }
                     else
                     {
                         <li class="nav-item">
                             <a class="nav-link text-dark" asp-controller="Authorization" asp-action="Logout">@ViewLocalizer["SignOut"]</a>
                         </li>
                     }
                 </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>