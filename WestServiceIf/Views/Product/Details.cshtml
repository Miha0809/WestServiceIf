@model Product

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form action="HomeworkDetails" method="post" enctype="multipart/form-data">
    <div>
        <hr />
        @if (Model.Images != null && Model.Images.Any())
        {
            <div>
                @foreach (var image in Model.Images)
                {
                    <img src="data:image;base64,@(Convert.ToBase64String(image.ImageData))" alt="@image.FileName" />
                }
            </div>
        }
        else
        {
            <p>No images available</p>
        }
        <dl class="row">
            <dd class="col-sm-10">
                @Model.Title
            </dd>
            <dt class="col-sm-2">
                @Model.Description
            </dt>
        </dl>
    </div>
    <div class="form-group">
        <input type="submit" value="Send"/>
        @if (User.Identity!.IsAuthenticated)
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        }
    </div>
</form>
