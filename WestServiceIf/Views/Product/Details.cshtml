@model Product

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>HomeworkDetails</h1>

<form action="HomeworkDetails" method="post" enctype="multipart/form-data">
    <div>
        <h4>Homework</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Model.Id
            </dt>
            <dd class="col-sm-10">
                @Model.Title
            </dd>
            <dt class="col-sm-2">
                @Model.Description
            </dt>
        </dl>
    </div>
    <div class="form-group">
        <input type="submit" value="Send"/>
    </div>
</form>