@model Product

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>HomeworkDetails</h1>

<form action="HomeworkDetails" method="post" enctype="multipart/form-data">
    <div>
        <h4>Homework</h4>
        <hr />
        <dl class="row">
            <dd class="col-sm-10">
                @Model.Title
            </dd>
            <dt class="col-sm-2">
                @Model.Description
            </dt>
        </dl>
    </div>
    <div class="form-group">
        <input type="submit" value="Send"/>
        @if (User.Identity!.IsAuthenticated)
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        }
    </div>
</form>
